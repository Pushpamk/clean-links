{
  "manifest_version": 3,
  "name": "Clean Links",
  "version": "1.0.0",
  "description": "Automatically removes query parameters from copied URLs to clean up links and protect privacy",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "storage",
    "notifications",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles/notification.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clean Links - Automatically cleans copied URLs"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "clean-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Clean URL from clipboard"
    }
  }
}